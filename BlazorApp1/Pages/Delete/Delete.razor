@page "/Delete"
@using BlazorApp1.Data
@using BlazorApp1.Models
@inject NavigationManager NavigationManager
<h1>Employee List</h1>
@inject IJSRuntime JSRuntime
@inject Empservice Empservice
@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Skills</th>
                <th>Email</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in forecasts)
            {
                <tr>
                    <td>@forecast.name</td>
                    <td>@forecast.age</td>
                    <td>@forecast.address</td>
                    <td>@forecast.skills</td>
                    <td>@forecast.Email</td>
                    <td>

                        <button class="btn btn-danger" @onclick="() => DeleteEmployeeAsync(forecast.id)">Delete</button>
                     

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

