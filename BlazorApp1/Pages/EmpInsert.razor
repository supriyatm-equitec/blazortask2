@page "/EmpInsert"
<h3>EmpInsert</h3>
<h1>Insertdata</h1>
@using BlazorApp1.Data
@using BlazorApp1.Models
@inject Empservice Empservice
@inject NavigationManager NavigationManager
<EditForm Model="@typeof(BlazorApp1.Models.Emptbl)" OnValidSubmit="AddEmp" class="mt-3">
<div class="mb-3">
        <label class="form-label" for="name">Name:</label>
        <InputText class="form-control" id="name" @bind-Value="newEmployee.Name" placeholder="Enter your name" />
       @* <ValidationMessage For="@(() => newEmployee.Name)" /> *@
</div>
    <div class="mb-3">
        <label class="form-label" for="age">Age:</label>

<InputNumber class="form-control" id="age" @bind-Value="newEmployee.Age" placeholder="Enter your age" />
       @*  <ValidationMessage For="@(() => newEmployee.Age)" /> *@
</div>
    <div class="mb-3">
        <label class="form-label" for="address">Address:</label>
        <InputText class="form-control" id="address" @bind-Value="newEmployee.Address" placeholder="Enter your address" />
@*         <ValidationMessage For="@(() => newEmployee.Address)" />
 *@    </div>
    <div class="form-group">
        <label for="skills">Skills:</label>
        <div>
            @foreach (var skill in skills)
            {
                <div class="form-check">
                    <InputCheckbox class="form-check-input" id="@skill.Name" @bind-Value="skill.IsSelect" />

                    <label class="form-check-label" for="@skill.Name">@skill.Name</label>
                </div>
            }
        </div>
    </div>
<div class="mb-3">
        <label class="form-label" for="address">Email:</label>
        <InputText class="form-control" id="address" @bind-Value="newEmployee.Email" placeholder="Enter your address" />
@*         <ValidationMessage For="@(() => newEmployee.Address)" />
 *@    </div>
    <div>
        <button type="submit" class="btn btn-primary">Add Employee</button>
    </div>
</EditForm>
<hr />

